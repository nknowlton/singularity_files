Bootstrap: docker
From: alpine:3.6

%post
version=1.3.1

apk add --update --no-cache ncurses \
    && apk add --virtual=deps --update --no-cache \
    ncurses-dev \
    musl-dev \
    g++ \
    make \
    zlib-dev \
    curl

curl -SL https://github.com/samtools/samtools/releases/download/${version}/samtools-${version}.tar.bz2 \
    | tar -xjC /tmp/ \
    && cd /tmp/samtools-${version} && make \
    && mv /tmp/samtools-${version}/samtools /usr/bin \
    && rm -rf /var/cache/apk/* /tmp/* \
    && apk del deps

%runscript
exec samtools $@
 
